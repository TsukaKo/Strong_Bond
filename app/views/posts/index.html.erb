<div class="container px-8 px-sm-12 mx-auto">
  <div class="row">
    <div class="col">
      <h2>投稿一覧</h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">投稿日</th>
            <th scope="col">投稿者</th>
            <th scope="col">タイトル</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |posts| %>
          <tr>
            <td><%= posts.created_at %></td>
            <td><%= posts.user.first_name %><%= posts.user.last_name %></td>
            <td><%= posts.title %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>