<div class="container px-5 px-sm-0 mx-auto">
  <div class="row">
    <h2>投稿詳細画面</h2>
    <div class="col">
      <div class="col md-2 offset-md-1">

      </div>
      <div class="col">
       <%= attachment_image_tag @post, :image, :fill, 120, 120, fallback: "no_image.jpg" %>
       <h3><%= @post.title %></h3>
       <h3><%= @post.post %></h3>
       <%= link_to new_post_comment_path(@post.id) do %>
        <button type="button" class="btn btn-info">コメント</button>
       <% end %>
       <% if @post.user.id == current_user.id %>
         <%= link_to edit_post_path(@post.id), local:true do %>
            <button type="button" class="btn btn-success">編集</button>
         <% end %>
       <% end %>
      </div>
    </div>

    <div class="row">
     <% @comments.each do |comment| %>
      <div class="comment-box">
        <div class="comment-box-inner">
          <h5><%= comment.post.user.first_name %><%= comment.post.user.last_name %></h5>
          <h5><%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></h5>
          <h5><%= comment.comment %></h5>
        </div>
      </div>
     <% end %>
    </div>
    <!--comment投稿者もしくはpost投稿のみ削除可能-->
  </div>
</div>