<div class="container px-5 px-sm-0 mx-auto">
  <div class="row">
    <h2>投稿詳細画面</h2>
    <div class="col">
      <div class="col md-2 offset-md-1">
        <%= attachment_image_tag @post, :image, :fill, 20, 20, fallback: "no_image.jpg" %>
      </div>
      <h3><%= @post.title %></h3>
      <h3><%= @post.post %></h3>
      <%= link_to new_comment_path do %>
       <button type="button" class="btn btn-info">コメント</button>
      <% end %>
      <%= form_with model:@post, url:edit_post_path(@post.id), local:true do |f| %>
        <% if @posts.user.id == current_user.id %>
          <% f.submit "編集", class:"btn btn-success" %>
        <% end %>
      <% end %>
    </div>
    <!--ここにコメント一覧-->
    <% @comment.each do |comment| %>
    <div class="comment-box">
      <div class="comment-box-inner">
        
      </div>
    </div>
    <% end %>
    <!--comment投稿者もしくはpost投稿のみ削除可能-->
  </div>
</div>