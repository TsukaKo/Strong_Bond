<div class="box">
  <div class="box-inner">
     <h2>新規登録</h2>

    <%= form_with model:@user, url:user_registration_path, local:true  do |f| %>
       <%= render "devise/shared/error_messages", resource: resource %>

       <div >
         <%= f.label :name, "名前" %><br />
         (姓)<%= f.text_field :first_name, autofoucs: true, autocomplete: "first_name" %>
         (名)<%= f.text_field :last_name, autofoucs: true, autocomplete: "last_name" %> <br />
         (セイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
         (メイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
       </div>

       <div class="field"><br />
         <%= f.label :email, "メールアドレス" %><br />
         <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
       </div>

       <div class="form-group"><br />
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
       </div>

       <div class="form-group"><br />
         <%= f.label :address, "住所" %><br />
         <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
       </div>

       <div class="form-group"><br />
         <%= f.label :telephone_number, "電話番号（ハイフンなし）" %><br />
         <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
       </div>

       <div class="field"><br />
         <%= f.label :password, "パスワード" %>
         <% if @minimum_password_length %>
         <em>(<%= @minimum_password_length %> characters minimum)</em>
         <% end %><br />
         <%= f.password_field :password, autocomplete: "new-password" %>
       </div>

       <div class="field"><br />
         <%= f.label :password_confirmation, "確認用パスワード" %><br />
         <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
       </div>

       <div class="actions">
        </br>
        <%= f.submit "登録" %>
       </div>
    <% end %>
    <h5 class="bg-secondary d-inline px2">既に登録済みの方</h5>
    <%= link_to "こちら", new_user_session_path %>からログインして下さい
  </div>
</div>
